<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

    <listener>
        <listener-class>cz.cas.lib.proarc.webapp.server.EditorServletConfiguration</listener-class>
    </listener>

    <!--  Authenticate filter -->
    <filter>
        <filter-name>auth</filter-name>
        <filter-class>cz.cas.lib.proarc.authentication.ProarcAuthFilter</filter-class>
        <init-param>
            <param-name>realm</param-name>
            <param-value>Protected</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>auth</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!--  login servlet -->
    <servlet>
        <servlet-name>proarcservlet</servlet-name>
        <servlet-class>cz.cas.lib.proarc.authentication.ProarcHTTPServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>proarcservlet</servlet-name>
        <url-pattern>/proarclogin</url-pattern>
    </servlet-mapping>

    <!--REST-->
    <servlet>
        <servlet-name>Jersey Web Application</servlet-name>
        <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>com.sun.jersey.config.property.packages</param-name>
            <param-value>cz.cas.lib.proarc.webapp.server.rest</param-value>
        </init-param>

        <!-- see http://jersey.java.net/nonav/apidocs/1.9.1/jersey/com/sun/jersey/api/container/filter/LoggingFilter.html -->
        <!-- see http://jersey.java.net/nonav/apidocs/1.9.1/jersey/com/sun/jersey/api/container/filter/GZIPContentEncodingFilter.html -->
        <init-param>
            <param-name>com.sun.jersey.spi.container.ContainerRequestFilters.disabled</param-name>
            <param-value>com.sun.jersey.api.container.filter.LoggingFilter;com.sun.jersey.api.container.filter.GZIPContentEncodingFilter</param-value>
        </init-param>
<!--        <init-param>
            <param-name>com.sun.jersey.config.feature.logging.DisableEntitylogging</param-name>
            <param-value>true</param-value>
        </init-param>-->

        <load-on-startup>1</load-on-startup>

    </servlet>

    <!--GWT RPC-->
    <servlet>
        <servlet-name>ModsGwtServiceProvider</servlet-name>
        <servlet-class>cz.cas.lib.proarc.webapp.server.ModsGwtServiceProvider</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Jersey Web Application</servlet-name>
        <url-pattern>/rest/v1/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ModsGwtServiceProvider</servlet-name>
        <url-pattern>/proarc/modsgwt</url-pattern>
    </servlet-mapping>

    <!-- Default page to serve -->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <resource-ref>
        <res-ref-name>jdbc/proarc</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>

    
</web-app>
